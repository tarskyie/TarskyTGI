<Page
    x:Class="TarskyTGI.Pages.HostPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="12" RowDefinitions="Auto,*">
        <StackPanel Orientation="Vertical" Spacing="8">

            <TextBlock Text="Model Server Control Panel" FontSize="20" FontWeight="Bold"/>

            <!-- Model path -->
            <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBox x:Name="ModelBox" Width="250" PlaceholderText="Model path"/>
                <Button x:Name="selectModelButton" Content="📁" Click="selectModelButton_Click"/>
            </StackPanel>

            <!-- API port -->
            <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBox x:Name="PortBox" Width="100" PlaceholderText="Port" Text="8080"/>
                <TextBox x:Name="HostBox" Width="140" PlaceholderText="Host" Text="127.0.0.1"/>
            </StackPanel>

            <!-- Runtime parameters -->
            <TextBox x:Name="ctxBox" Width="140" PlaceholderText="n_ctx" Text="1024"/>
            <TextBox x:Name="gpuLayers" Width="140" PlaceholderText="GPU layers" Text="0"/>

            <!-- Priority -->
            <ComboBox x:Name="priorityBox" Width="140" SelectedIndex="2">
                <ComboBoxItem Content="Idle"/>
                <ComboBoxItem Content="BelowNormal"/>
                <ComboBoxItem Content="Normal"/>
                <ComboBoxItem Content="AboveNormal"/>
                <ComboBoxItem Content="High"/>
                <ComboBoxItem Content="RealTime"/>
            </ComboBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="6">
                <Button x:Name="startServerButton" Content="Start Server" Click="StartServer_Click"/>
                <Button x:Name="stopServerButton" Content="Stop Server" Click="StopServer_Click"/>
            </StackPanel>

            <TextBlock x:Name="StatusTextBlock" Text="Idle."/>
        </StackPanel>
    </Grid>
</Page>
